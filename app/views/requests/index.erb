<h1 class='page-title'> Requests </h1>
<h2>You have sent!!!!!!</h2>
<% if !@requests.empty? %>
  <% @requests.each do |request| %>
  <%= Space.first(id: request.space_id).name %>
    <%= Space.first(id: request.space_id).booked? %>
    <%= request.start_date %>
    <%= request.end_date %>
  <% end %>
<% end %>

<h2>Incoming!</h2>
<% if !@spaces.empty? %>
  <% @spaces.each do |space| %>
    <% Request.all.select{|request| request if request[:space_id]==space.id}.each do |request| %>
    <%= space.name %>
    <%= space.booked?%>
    <%= request.start_date %>
    <%= request.end_date %>
    <% end %>
  <% end %>
<% end %>
